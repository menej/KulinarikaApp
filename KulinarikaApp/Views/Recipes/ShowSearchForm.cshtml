@model KulinarikaApp.Models.SearchPhrase

@{
    ViewData["Title"] = "Search";
}

<h4>Poišči poljuben recept</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            <div class="form-group">
                <input asp-for="Phrase" class="form-control"/>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Search" class="btn btn-primary"/>
            </div>
        </form>

    </div>
</div>